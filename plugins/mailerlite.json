{
  "$schema": "https://raw.githubusercontent.com/invoiceradar/plugins/main/schema.json",
  "id": "mailerlite",
  "name": "Mailerlite",
  "description": "Mailerlite is an email sending service.",
  "homepage": "https://mailerlite.com",
  "configSchema": {
    "username": {
      "type": "string",
      "title": "Username",
      "required": false
    },
    "password": {
      "type": "password",
      "title": "Password",
      "required": false
    }
  },
  "checkAuth": [
    {
      "action": "navigate",
      "url": "https://dashboard.mailerlite.com/login"
    },
    {
      "action": "checkElementExists",
      "selector": "[data-test-id='user-dropdown']"
    }
  ],
  "startAuth": [
    {
      "action": "navigate",
      "url": "https://dashboard.mailerlite.com/login"
    },
    {
      "action": "waitForElement",
      "selector": "#email"
    },
    { "action": "type", "selector": "#email", "value": "{{config.username}}" },
    {
      "action": "type",
      "selector": "#password",
      "value": "{{config.password}}"
    },
    {
      "action": "waitForElement",
      "selector": "[data-test-id='user-dropdown']",
      "timeout": 120000
    }
  ],
  "getDocuments": [
    {
      "action": "navigate",
      "url": "https://dashboard.mailerlite.com/billing/invoices"
    },
    {
      "action": "waitForElement",
      "selector": "table"
    },
    {
      "action": "extractAll",
      "selector": "tbody tr",
      "fields": {
        "id": {
          "selector": "td:nth-child(2) a"
        },
        "date": {
          "selector": "td:nth-child(1)"
        },
        "url": {
          "selector": "td:nth-child(6) a",
          "attribute": "href"
        },
        "total": {
          "selector": "td:nth-child(3)"
        }
      },
      "forEach": [
        {
          "action": "downloadPdf",
          "url": "{{item.url}}",
          "document": "item"
        }
      ]
    }
  ]
}
